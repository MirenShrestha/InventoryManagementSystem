@model InventoryManagementSystem.Models.AccountViewModel


@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
}


    <div class="card-body p-5">

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </br>



        <h4 class="text-dark mb-5">Sign In</h4>
        @*<form action="/index.html">*@
        @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "form-inline", @enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-group col-md-12 mb-4">
                    @*<input type="email" class="form-control input-lg" id="email" aria-describedby="emailHelp" placeholder="Username">*@
                    @Html.TextBoxFor(model => model.Username, new { @placeholder = "Enter Username", @class = "form-control", @required = "required" })
                </div>





                <div class="form-group col-md-12 mb-4 ">
                    @*<input type="password" class="form-control input-lg" id="password" placeholder="Password">*@
                    @Html.PasswordFor(model => model.Password, new { @placeholder = "Password", @class = "form-control ", @type = "password", @id = "password", @required = "required" })

                </div>
                <div class="col-md-12">
                    <div class="d-flex my-2 justify-content-between">
                        <div class="d-inline-block mr-3">
                            <label class="control control-checkbox">
                                @*Remember me*@
                                @*<input type="checkbox" />*@
                                @Html.CheckBoxFor(model => model.RememberMe) Remember Me
                                <div class="control-indicator"></div>
                            </label>

                        </div>
                        <p><a class="text-blue" href="#">Forgot Your Password?</a></p>
                    </div>


                    <button type="submit" class="btn btn-lg btn-primary btn-block mb-4">Sign In</button>


                    <p>
                        Don't have an account yet ?
                        <a class="text-blue" href="sign-up.html">Sign Up</a>
                    </p>
                </div>
            </div>
            @*</form>*@
        }


    </div>

